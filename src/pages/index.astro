---
        import Nav from '../components/Nav.astro'

        import Layout from '../layouts/Layout.astro';
        import logo from '/images/logo.svg'
        import altLogo from '/images/logo-alt.svg'
        import lettering from '/images/logo-lettering.png'

        import { Content as Manifesto } from '../data/manifesto.md'

        const catchphrase = 'Building the future under the ground'

        const teamMembers = await Astro.glob('../data/*.team.json')
        const designMembers = await Astro.glob('../data/*.design.json')

        teamMembers.sort((a, b) => a.order - b.order)
        designMembers.sort((a, b) => a.order - b.order)

        const getTwitterLink = (handle) => {
            return `https://twitter.com/${handle.slice(1)}`
        }
        ---

<Layout title="Underground Society NFT">
    <div id="hero" class="hero min-h-screen bg-fixed bg-[url('/images/bg2.gif')]">
        <div class="hero-overlay backdrop-contrast-125 backdrop-brightness-125 bg-opacity-20"></div>
        <div class="hero-content text-center text-neutral-content h-full items-end">
            <a href="#manifesto" class="btn btn-primary shadow mb-8">Get Started</a>
        </div>
    </div>
    <main class="">
        <Nav>
            <div id="manifesto" class="min-h-screen scroll-mt-[4rem] p-4">
                <Manifesto />
            </div>
            <div id="team" class="scroll-mt-[4rem] h-fit mb-10 p-4">
                <h1>Core team</h1>

                <div class="flex flex-wrap gap-8 w-full md:w-3/4 justify-center mx-auto">
                    {teamMembers.map(m => (
                    <div class="card w-96 bg-base-100 shadow-xl">
                        <figure><img src={m.avatarUrl} alt="avatar"/></figure>
                        <div class="card-body">
                            <h2 class="card-title">{m.name}</h2>
                            <div class="flex justify-between">
                                <span class="badge badge-lg">{m.job}</span>
                                <a href={getTwitterLink(m.twitter)} target="_blank">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"
                                         class="fill-current hover:fill-secondary">
                                        <path d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"></path>
                                    </svg>
                                </a>
                            </div>
                            <p class="prose">{m.description}</p>
                        </div>
                    </div>
                    )
                    )}
                </div>
            </div>

            <div id="design" class="scroll-mt-[4rem] h-fit mb-10 p-4">
                <h1>Design team</h1>

                <div class="flex flex-wrap gap-8 w-full md:w-3/4 justify-center mx-auto">
                    {designMembers.map(m => (
                    <div class="card w-96 bg-base-100 shadow-xl">
                        <figure><img src={m.avatarUrl} alt="avatar"/></figure>
                        <div class="card-body">
                            <h2 class="card-title">{m.name}</h2>
                            <div class="flex justify-between">
                                <span class="badge badge-lg">{m.job}</span>
                                <a href={getTwitterLink(m.twitter)} target="_blank">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"
                                     class="fill-current hover:fill-secondary">
                                    <path d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"></path>
                                </svg>
                            </a>
                        </div>
                            <p class="prose">{m.description}</p>
                        </div>
                    </div>
                    )
                    )}
                </div>
            </div>


        </Nav>
        <footer class="footer p-10 bg-neutral text-neutral-content">
            <div>
                <img src={altLogo} class="w-20 h-20" alt="footer logo"/>
                <p class="text-neutral-content"><span class="uppercase">Underground Society</span><br>{catchphrase}</p>
            </div>
            <div>
                <span class="footer-title">Social</span>
                <div class="grid grid-flow-col gap-4">
                    <a href={getTwitterLink('@UnderSocietyNFT')} target="_blank" >
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"
                             class="fill-current hover:fill-primary">
                            <path d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"></path>
                        </svg>
                    </a>
                </div>
            </div>
        </footer>
    </main>
</Layout>