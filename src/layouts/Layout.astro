---
import '../styles/global.css'
import Nav from '../components/Nav.astro';

export interface Props {
	title: string;
}

const { title } = Astro.props as Props;
const wp = "https://docs.google.com/document/d/1q8JTfnohyIX9KLDNa4W3MdVNe5Ao0hEGl8IFZjPm9U8"
const lp = "https://docs.google.com/presentation/d/1yR_XYWKwBXOXT_eexN63gEPTqo6XwYU2"
---

<!DOCTYPE html>
<html data-theme="light" lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon_io/favicon.ico" />
		<link rel="apple-touch-icon" sizes="180x180" href="/favicon_io/apple-touch-icon.png">
        <link rel="icon" type="image/png" sizes="32x32" href="/favicon_io/favicon-32x32.png">
        <link rel="icon" type="image/png" sizes="16x16" href="/favicon_io/favicon-16x16.png">

		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
	<div class="drawer drawer-end">
	<input id="my-drawer-3" type="checkbox" class="drawer-toggle" />
	<div class="drawer-content flex flex-col scroll-smooth snap-y motion-safe:snap-proximity">

		    <slot />

	</div>
		<div class="drawer-side">
			<label for="my-drawer-3" class="drawer-overlay"></label>
			<ul class="menu p-4 overflow-y-auto w-80 bg-base-100 gap-2">
				<!-- Sidebar content here -->
				<li><a class="btn btn-ghost" href="#manifesto">Manifesto</a></li>
				<li><a class="btn btn-ghost" href="#labs">Labs</a></li>
				<li><a class="btn btn-ghost" href="#team">Team</a></li>
				<li class="tooltip tooltip-bottom" data-tip="Coming soon"><button disabled class="btn w-full"><a href="#nft">NFT</a></button></li>
				<li><a class="btn btn-ghost" href="#ecosystem">Ecosystem</a></li>
				<li><button class="btn btn-primary"><a target="_blank" href={lp}>Litepaper <i class="fa-solid fa-arrow-up-right-from-square"></i></a></button></li>
				<li><button class="btn btn-primary"><a target="_blank" href={wp}>Whitepaper <i class="fa-solid fa-arrow-up-right-from-square"></i></a></button></li>
			</ul>

		</div>
	</div>
	</body>
</html>
<script src="https://kit.fontawesome.com/51fc2db30d.js" crossorigin="anonymous"></script>
