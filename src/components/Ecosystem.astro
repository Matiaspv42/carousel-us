---
import Ecosystem3D from "./Ecosystem/Ecosystem3D"

const ecosystemItems = await Astro.glob('../data/*.ecosystem.md')
---

<div id="ecosystem" class="snap-start scroll-mt-[4rem] h-fit mb-10 p-4 relative">
    <h1>Ecosystem</h1>
    <div class="w-full absolute top-5 -z-10 left-0">
        <Ecosystem3D client:load/>
    </div>

    <div class=" z-30 flex flex-wrap gap-8 w-full md:w-3/4 lg:w-5/6 justify-center mx-auto max-h-screen md:max-h-max pb-8 overflow-y-scroll md:overflow-auto">
        {ecosystemItems.map(i => (<i.Content/>))}
    </div>
</div>

