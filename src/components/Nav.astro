---
import logo from '/images/logo.webp'
import MegaMenu from '../components/MegaMenu.svelte'


const wp = "https://docs.google.com/document/d/1q8JTfnohyIX9KLDNa4W3MdVNe5Ao0hEGl8IFZjPm9U8"
const lp = "https://docs.google.com/presentation/d/1yR_XYWKwBXOXT_eexN63gEPTqo6XwYU2"
---
<style>
  .button{
    @apply bg-primary;
  }

  .navSection{
    @apply p-4
    bg-[length:0_2px] bg-[0_100%] bg-no-repeat
    bg-gradient-to-r from-neutral to-neutral
    transition-all ease-in-out duration-500 motion-reduce:transition-none;
  }

  .navSection:hover{
    @apply p-4 rounded-none from-secondary to-secondary bg-[length:100%_2px];
  }

  .activeSection{
    @apply p-4 bg-[length:100%_2px];
  }
</style>

    <!-- Navbar -->
    <div class="w-full navbar bg-base-100/60 backdrop-blur shadow-lg sticky top-0 z-50 flex justify-between ">

      <div class="flex-none navbar-start hidden lg:block sm:space-around">
        <ul class="flex">
          <!-- Navbar menu content here -->
          <li class="relative"><a class="mx-4 navSection" href="#manifesto" id="nav-section-manifesto">Manifesto</a></li>
          <li class="relative"><a class="mx-4 navSection" href="#labs" id="nav-section-labs">Labs</a></li>
          <li class="relative"><a class="mx-4 navSection" href="#team" id="nav-section-team">Team</a></li>
          <li class="relative"><a class="mx-4 navSection" href="#nft" id="nav-section-nft">NFT</a></li>
          <li class="relative"><a class="mx-4 navSection" href="#ecosystem" id="nav-section-ecosystem">Ecosystem</a></li>
        </ul>

      </div>

      <div class="flex-1 mx-2 navbar-center">
        <MegaMenu client:load></MegaMenu>
      </div>

      <div class="flex-1 navbar-end ">
        <div class=" p-2 rounded-lg m-2 hidden lg:block">
          <a href="https://twitter.com/UnderSocietyNFT" target="_blank" class="">
            <svg class="hover:fill-secondary" style="color: #0A0E11" width="26" height="26"  class="" viewBox="0 0 16 16"> <path d="M5.026 15c6.038 0 9.341-5.003 9.341-9.334 0-.14 0-.282-.006-.422A6.685 6.685 0 0 0 16 3.542a6.658 6.658 0 0 1-1.889.518 3.301 3.301 0 0 0 1.447-1.817 6.533 6.533 0 0 1-2.087.793A3.286 3.286 0 0 0 7.875 6.03a9.325 9.325 0 0 1-6.767-3.429 3.289 3.289 0 0 0 1.018 4.382A3.323 3.323 0 0 1 .64 6.575v.045a3.288 3.288 0 0 0 2.632 3.218 3.203 3.203 0 0 1-.865.115 3.23 3.23 0 0 1-.614-.057 3.283 3.283 0 0 0 3.067 2.277A6.588 6.588 0 0 1 .78 13.58a6.32 6.32 0 0 1-.78-.045A9.344 9.344 0 0 0 5.026 15z"/> </svg>
          </a>
        </div>
        <div class="dropdown dropdown-end bg-primary hidden lg:block">
          <label tabindex="0" class="btn btn-primary">Papers</label>
          <ul tabindex="0" class="menu dropdown-content p-2 shadow bg-primary w-52 mt-4 shadow-2xl">
            <li><a target="_blank" href={lp}>Litepaper <i class="fa-solid fa-arrow-up-right-from-square"></i></a></li>
            <li><a target="_blank" href={wp}>Whitepaper <i class="fa-solid fa-arrow-up-right-from-square"></i></a></li>
          </ul>
        </div>
      </div>

      <div class="flex-none navbar-end lg:hidden">
        <label for="my-drawer-3" class="btn btn-square btn-ghost lg:hidden">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block w-6 h-6 stroke-current"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path></svg>
        </label>
      </div>

    </div>

    <slot />
